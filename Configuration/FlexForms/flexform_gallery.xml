<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <ROOT>
        <type>array</type>
        <el>
            <settings.fileCollections>
                <TCEforms>
                    <label>LLL:EXT:media_gallery/Resources/Private/Language/locallang_db.xml:tx_mediagallery_plugin_filecollections</label>
                    <config>
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <size>4</size>
                        <maxitems>1000</maxitems>
						<minitems>0</minitems>
						<allowed>sys_file_collection</allowed>
                    </config>
                </TCEforms>
            </settings.fileCollections>
			<settings.allowDownload>
                <TCEforms>
                    <label>LLL:EXT:media_gallery/Resources/Private/Language/locallang_db.xml:tx_mediagallery_plugin_allowdownload</label>
                    <config>
                        <type>check</type>
                        <default>0</default>
                    </config>
                </TCEforms>
            </settings.allowDownload>
			<settings.onreadyjs>
                <TCEforms>
                    <label>LLL:EXT:media_gallery/Resources/Private/Language/locallang_db.xml:tx_mediagallery_plugin_detailsInLightbox</label>
                    <config>
           	    		<type>select</type>
           	   			<items>
           	   				<numIndex index="1" type="array">
								<numIndex index="0">LLL:EXT:media_gallery/Resources/Private/Language/locallang_db.xml:tx_mediagallery_plugin_onreadyjs</numIndex>
								<numIndex index="1">0</numIndex>
							</numIndex>
						</items>
           	    		<itemsProcFunc>tx_MediaGallery_Utility_LoadRegisteredHooks->user_loadRegisteredHooks</itemsProcFunc>
						<maxitems>1</maxitems>
						<size>1</size>
			  		</config>
                </TCEforms>
            </settings.onreadyjs>
			<settings.gallery.itemsPerPage>
                <TCEforms>
                    <label>LLL:EXT:media_gallery/Resources/Private/Language/locallang_db.xml:tx_mediagallery_plugin_limit</label>
                    <config>
                        <type>input</type>
                        <eval>int</eval>
						<range>
							<min>1</min>
							<max>200</max>
						</range>
						<default>16</default>
                    </config>
                </TCEforms>
            </settings.gallery.itemsPerPage>
        </el>
    </ROOT>
</T3DataStructure>